{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ES2021"],
    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
